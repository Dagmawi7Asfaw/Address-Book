[mssql]
# Enable encryption
encrypt = true
# Trust server certificate (for self-signed certificates)
trustServerCertificate = true
# SSL certificate file
certificate = /var/opt/mssql/certs/server.crt
# Private key file
privateKey = /var/opt/mssql/certs/server.key
# Force encryption
forceEncryption = true

# Note: This is a sample configuration file.
# The actual certificate files (server.crt, server.key) are not included
# and should be generated using ./setup_encryption.sh 